<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chocolateTea_menu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:scaleType="fitStart"
                    android:id="@+id/backBtn"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="46dp"
                    android:text="Chocolate &amp; Tea"
                    android:fontFamily="@font/medium"
                    android:textSize="24dp"
                    android:textColor="@color/primary1"
                    android:textAlignment="center"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/grey"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:id="@+id/chocolate"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Hot Chocolate"
                                android:fontFamily="@font/regular"
                                android:textSize="18dp"
                                android:textColor="@color/primary1"
                                android:textAlignment="textStart"
                                android:id="@+id/chocolateText"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="end"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="RM"
                                    android:fontFamily="@font/extralight"
                                    android:textSize="18dp"
                                    android:textColor="@color/primary1"
                                    android:textAlignment="textEnd"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="11.00"
                                    android:fontFamily="@font/extralight"
                                    android:textSize="18dp"
                                    android:textColor="@color/primary1"
                                    android:textAlignment="textStart"
                                    android:id="@+id/chocolatePrice"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="24dp"
                            android:background="@color/grey"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:id="@+id/peppermint"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Peppermint White Hot Chocolate"
                                android:fontFamily="@font/regular"
                                android:textSize="18dp"
                                android:textColor="@color/primary1"
                                android:textAlignment="textStart"
                                android:id="@+id/peppermintText"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="end"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="RM"
                                    android:fontFamily="@font/extralight"
                                    android:textSize="18dp"
                                    android:textColor="@color/primary1"
                                    android:textAlignment="textEnd"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15.50"
                                    android:fontFamily="@font/extralight"
                                    android:textSize="18dp"
                                    android:textColor="@color/primary1"
                                    android:textAlignment="textStart"
                                    android:id="@+id/peppermintPrice"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="24dp"
                            android:background="@color/grey"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:id="@+id/teavana"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TeavanaÂ® London Fog Tea Latte"
                                android:fontFamily="@font/regular"
                                android:textSize="18dp"
                                android:textColor="@color/primary1"
                                android:textAlignment="textStart"
                                android:id="@+id/teavanaText"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="end"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="RM"
                                    android:fontFamily="@font/extralight"
                                    android:textSize="18dp"
                                    android:textColor="@color/primary1"
                                    android:textAlignment="textEnd"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="13.50"
                                    android:fontFamily="@font/extralight"
                                    android:textSize="18dp"
                                    android:textColor="@color/primary1"
                                    android:textAlignment="textStart"
                                    android:id="@+id/teavanaPrice"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="24dp"
                            android:background="@color/grey"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:id="@+id/royalEng"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Royal English Breakfast Tea"
                                android:fontFamily="@font/regular"
                                android:textSize="18dp"
                                android:textColor="@color/primary1"
                                android:textAlignment="textStart"
                                android:id="@+id/royalEngText"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="end"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="RM"
                                    android:fontFamily="@font/extralight"
                                    android:textSize="18dp"
                                    android:textColor="@color/primary1"
                                    android:textAlignment="textEnd"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="9.00"
                                    android:fontFamily="@font/extralight"
                                    android:textSize="18dp"
                                    android:textColor="@color/primary1"
                                    android:textAlignment="textStart"
                                    android:id="@+id/royalEngPrice"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="24dp"
                            android:background="@color/grey"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:id="@+id/matcha"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/matchaText"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/regular"
                                android:text="Matcha Tea Latte"
                                android:textAlignment="textStart"
                                android:textColor="@color/primary1"
                                android:textSize="18dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="end"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="RM"
                                    android:fontFamily="@font/extralight"
                                    android:textSize="18dp"
                                    android:textColor="@color/primary1"
                                    android:textAlignment="textEnd"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12.00"
                                    android:fontFamily="@font/extralight"
                                    android:textSize="18dp"
                                    android:textColor="@color/primary1"
                                    android:textAlignment="textStart"
                                    android:id="@+id/matchaPrice"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="24dp"
                            android:background="@color/grey"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:id="@+id/mint"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Mint MajestyÂ®"
                                android:fontFamily="@font/regular"
                                android:textSize="18dp"
                                android:textColor="@color/primary1"
                                android:textAlignment="textStart"
                                android:id="@+id/mintText"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="end"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="RM"
                                    android:fontFamily="@font/extralight"
                                    android:textSize="18dp"
                                    android:textColor="@color/primary1"
                                    android:textAlignment="textEnd"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12.50"
                                    android:fontFamily="@font/extralight"
                                    android:textSize="18dp"
                                    android:textColor="@color/primary1"
                                    android:textAlignment="textStart"
                                    android:id="@+id/mintPrice"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="24dp"
                            android:background="@color/grey"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="36dp"
                            android:text="- End -"
                            android:fontFamily="@font/extralight"
                            android:textSize="18dp"
                            android:textColor="@color/primary1"
                            android:textAlignment="center"/>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>