<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheBrewix" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary1</item>
        <item name="colorPrimaryVariant">@color/primary1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary2</item>
        <item name="colorSecondaryVariant">@color/primary2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/light</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="CustomSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/primary1</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#cccccc
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#cccccc
        </item>
    </style>



</resources>